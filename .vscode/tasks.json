{
	"tasks": [
		{
			"type": "process",
			"label": "Build kernel",
			"command": "/usr/bin/make",
			"args": [
				"build",
				"pack"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "qemu",
			"command": "setsid",
			"args": [
				"/usr/bin/make",
				"debug_uefi"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"dependsOn": "Build kernel",
			"problemMatcher": []
		}
	],
	"version": "2.0.0"
}
